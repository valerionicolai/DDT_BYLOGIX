APP_URL=http://localhost:8000

# Database
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Dusk Configuration
DUSK_DRIVER_URL=http://localhost:9515
DUSK_HEADLESS=true
DUSK_DISABLE_GPU=true
DUSK_NO_SANDBOX=false
DUSK_DISABLE_DEV_SHM=true
DUSK_DISABLE_EXTENSIONS=true
DUSK_DISABLE_WEB_SECURITY=false

# Browser Configuration
DUSK_BROWSER_WIDTH=1920
DUSK_BROWSER_HEIGHT=1080
DUSK_WAIT_TIME=5
DUSK_IMPLICIT_WAIT=10
DUSK_PAGE_LOAD_TIMEOUT=30
DUSK_SCRIPT_TIMEOUT=30

# Testing Features
DUSK_TEST_KEYBOARD=true
DUSK_TEST_SCREEN_READER=true
DUSK_TEST_CONTRAST=true
DUSK_TEST_ARIA=true

# Screenshots and Logging
DUSK_SCREENSHOT_ON_FAILURE=true
DUSK_SCREENSHOT_DIR=tests/Browser/screenshots
DUSK_SCREENSHOT_FORMAT=png
DUSK_CAPTURE_CONSOLE=true
DUSK_CONSOLE_LOG_DIR=tests/Browser/console

# Cache and Session
CACHE_DRIVER=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync

# Mail
MAIL_MAILER=array

# Logging
LOG_CHANNEL=single
LOG_LEVEL=debug

# File Storage
FILESYSTEM_DISK=local

# Broadcasting
BROADCAST_DRIVER=log

# Performance Testing
PERFORMANCE_TEST_ENABLED=true
MEMORY_LIMIT_TEST=52428800  # 50MB in bytes
PAGE_LOAD_THRESHOLD=5000    # 5 seconds in milliseconds
SEARCH_RESPONSE_THRESHOLD=2000  # 2 seconds in milliseconds

# Test Data
