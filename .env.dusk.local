# Accessibility Testing
ACCESSIBILITY_TEST_ENABLED=true
KEYBOARD_NAVIGATION_TEST=true
SCREEN_READER_TEST=true
COLOR_CONTRAST_TEST=true

# Mobile Testing
MOBILE_TEST_ENABLED=true
TABLET_TEST_ENABLED=true
RESPONSIVE_TEST_ENABLED=true

# Network Simulation
NETWORK_DELAY_SIMULATION=false
NETWORK_DELAY_MS=1000

# Error Simulation
ERROR_SIMULATION_ENABLED=false
SIMULATE_NETWORK_ERRORS=false
SIMULATE_SERVER_ERRORS=false